<%- include("../partials/header") %>

<h1>admin</h1>

<form action="/admin?_method=DELETE" method="post">
<button class="btn btn-danger float-right">删除</button>
<a href="/admin/new" class="btn btn-success float-right">添加</a>

<div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Leave City</th>
                <th scope="col">Arrive City</th>
                <th scope="col">Leave Airport</th>
                <th scope="col">Arrive Airport</th>
                <th scope="col">Date</th>
                <th scope="col">Leave Time</th>
                <th scope="col">Arrive Time</th>
                <th scope="col">Capacity</th>
                <th scope="col">Price</th>
                <th scope="col">Book Sum</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <% Airlines.forEach(airline => { %>
                <tr class="table-secondary">
                <th scope="row"><input type="checkbox" name="check" value="<%=airline._id%>"></th>
                <td><%= airline.name %></td>
                <td><%= airline.leaveCity %></td>
                <td><%= airline.arriveCity %></td>
                <td><%= airline.leaveAirport %></td>
                <td><%= airline.arriveAirport %></td>
                <td><%= airline.date %></td>
                <td><%= airline.leaveTime %></td>
                <td><%= airline.arriveTime %></td>
                <td><%= airline.capacity %></td>
                <td><%= airline.price %></td>
                <td><%= airline.bookSum %></td>
                <td><a href="/admin/<%=airline._id%>" class="btn btn-info btn-sm">修改</a></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
</form>

<%- include("../partials/footer") %>