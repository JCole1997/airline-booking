<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airline Booking</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body style="background-image: none;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">Airline</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <% if(!currentUser){  %>
                    <li><a class="nav-link" href="/login">登录 <i class="fas fa-user"></i></a></li>
                    <li><a class="nav-link" href="/register">注册 <i class="fas fa-user-plus"></i></a></li>
                    <% } else { %>
                    <li><a class="nav-link" href="/user/<%=currentUser._id%>"><%=currentUser.username %> </a></li>
                    <li><a class="nav-link" href="/logout">注销</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">购票记录</h1>
    </div>
</div>
<div class="container">
<div class="row">
    <div style="padding-right: 0px;" class="col-8">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">航班</th>
                    <th scope="col">日期</th>
                    <th scope="col">时间段</th>
                    <th scope="col">起点</th>
                    <th scope="col">终点</th>
                </tr>
            </thead>
            <tbody>
                <% var i = 1 %>
                <% Airlines.forEach(Airline => { %> 
                <tr>
                    <th scope="row"><%=i%></th>
                    <td><%= Airline.name %></td>
                    <td><%= Airline.date %></td>
                    <td><%=Airline.leaveTime%>-<%=Airline.arriveTime%></td>
                    <td><%= Airline.leaveCity %></td>
                    <td><%= Airline.arriveCity %></td>
                </tr>
                <%i++%>
                <%  }) %>
            </tbody>
        </table>
    </div>
    <div style="padding-left: 0px;" class="col-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">姓名</th>
                    <th style="padding-right: 20px;" scope="col">手机号</th>
                </tr>
            </thead>
            <tbody>
                <% Orders.forEach(order => { %>
                <tr>
                    <th scope="row"><%=order.name%></th>
                    <th><%=order.phoneNumber%></th>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
</div>

<%- include("./partials/footer") %>